@model Chart
@{
    
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<canvas id="pieChart"></canvas>
<script>
    const ctxPieChart = document.getElementById('pieChart').getContext('2d');
    const myPieChart = new Chart(ctxPieChart, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.Labels)),
            datasets: [{
                label: @Html.Raw(Json.Serialize(Model.Title)),
                data: @Html.Raw(Json.Serialize(Model.Data)),
                backgroundColor: @Html.Raw(Json.Serialize(Model.Color.BackgroundColor)),
                borderColor: @Html.Raw(Json.Serialize(Model.Color.BorderColor)),
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
