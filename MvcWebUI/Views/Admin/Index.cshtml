@model ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Product List</h1>
<a class="btn btn-sm btn-success" asp-controller="Admin"
   asp-action="Add">Add a new product</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr class="table-primary">
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td>
                <a class="btn btn-sm btn-info" asp-controller="Admin"
                   asp-action="Update" asp-route-productId="@product.ProductId">Update</a>
            </td>
            <td>
                <a class="btn btn-sm btn-danger" asp-controller="Admin"
                   asp-action="Delete" asp-route-productId="@product.ProductId">Delete</a>
            </td>
        </tr>
    }
</table>

