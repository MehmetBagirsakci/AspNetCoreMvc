@model ProductListViewModel
@{
}
<table class="table table-bordered table-hover">
    <thead>
        <tr class="table-primary">
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td><a class="btn btn-sm btn-success" asp-controller="Cart" 
                   asp-action="AddToCart" asp-route-productId="@product.ProductId">Add to cart</a></td>
        </tr>
    }
</table>
<product-list-pager 
                    current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize"></product-list-pager>